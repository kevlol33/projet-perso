<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">
                <i class="fas fa-user-secret"></i>
                Administration</h1>
            <div id="accordion">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h5 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseArticle"
                                aria-expanded="false" aria-controls="collapseArticle">
                                Ajouter un Article
                            </button>
                        </h5>
                    </div>

                    <div id="collapseArticle" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            {{> Admin/AddArticle}}
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingTwo">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseSujet"
                                aria-expanded="false" aria-controls="collapseSujet">
                                Gestion des Sujet
                            </button>
                        </h5>
                    </div>
                    <div id="collapseSujet" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                        <div class="card-body">
                            {{> Admin/BtnDel}}
                            {{> Admin/AdminSujet}}
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingThree">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseUser"
                                aria-expanded="false" aria-controls="collapseUser">
                                Gestoin des Utilisateur
                            </button>
                        </h5>
                    </div>
                    <div id="collapseUser" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                        <div class="card-body">
                            {{> Admin/AdminUser}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>