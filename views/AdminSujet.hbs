{{!-- Formulaire pour crée un article --}}
<form action="/admin" method="post" enctype="multipart/form-data">
    <div class="col">
        <label>Titre De L'article :</label>
        <input type="text" name='title' required>
        <label>Type D'article :</label>
        <input type="text" name='type' required>
        <label>Description : &nbsp</label>
        <textarea placeholder="Description" name="description"></textarea>
    </div>
    </br>
    <input type="file" name="imgSujets" class="button pr4" required>
    <div class="fiels is-grouped pt-4 ">
        <div class="control pr-5">
            </br>
            <button type="submit" class="button pr4">Enregistrer</button>
            <button class="button">Annuler</button>
            </br>
        </div>
    </div>
</form>
{{!-- /Formulaire pour crée un article --}}
</br>
<h1 class="title is-1">Liste des sujets :</h1>
{{!-- Formulaire pour éfacer tout les sujet --}}
<form action="/admin/?_method=DELETE" method="post">
    <button type="submit">Effacer tout</button>
</form>
{{!-- /Formulaire pour éfacer tout les sujet --}}
<div>
    {{!-- Boucle pour afficher les sujet --}}
    {{#each dbsujets }}
    <div class="card">
        <header class="card-header">
            <div class="card-content">
                <div class="content">
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src=" {{ imgSujets }} ">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p>Titre: {{ title }}</p>
                            </div>
                        </div>

                        {{!-- Dans les <p> je vais chercher les infos que j'ai besoin dans ma base de sonné --}}
                        <div class="content">
                            <p>{{ type }}</p>
                            <p>{{ description }}</p>
                            <p>{{ _id }}</p>
                        </div>
                        {{!-- /Dans les <p> je vais chercher les infos que j'ai besoin dans ma base de sonné --}}

                        {{!-- Formulaire pour mettre a jour un sujet  --}}
                        <form action="/admin/{{ _id }}/?_method=PUT" method="post">
                            <input type="text" name="title" placeholder="Title">
                            <input type="text" name="type" placeholder="Type">
                            <input type="text" name="description" placeholder="Description">
                            <input type="file" name="imgSujets">
                            </br>
                            <button type="submit">Editer</button>
                        </form>
                        {{!-- /Formulaire pour mettre a jour un sujet  --}}

                        {{!-- Formulaire pour supprimer un article --}}
                        <form action="/admin/{{ this.id }}/?_method=DELETE" method="post">
                            <button type="submit">Effacer</button>
                        </form>
                        {{!-- /Formulaire pour supprimer un article --}}

                    </div>
                </div>
            </div>
    </div>
    {{/each }}
    {{!-- /Boucle pour afficher les sujet --}}
</div>

<h1 class="title is-1">Liste des utilisateurs :</h1>

<div class="card">
    <header class="card-header">
        <div class="card-content">
            <div class="content">
                <div class="card-content">
                    <div class="media">
                        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Id</th>
                                    <th>Bouton</th>
                                </tr>
                            </thead>
                            {{#each dbusers }}
                            <tr>
                                <td>{{ username }}</td>
                                <td>{{ email }}</td>
                                <td>{{ _id }}</td>
                                <td>
                                    <form action="/admin/{{ this.id }}/?_method=DELETE" method="post">
                                        <button type="submit">Effacer</button>
                                    </form>

                                </td>
                            </tr>
                            {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>