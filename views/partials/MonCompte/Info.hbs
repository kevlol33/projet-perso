{{!-- Partial d'info sur l'utilisateur --}}

{{!-- {{dbUsers.username}} permet d'afficher l'username de l'utilisateur --}}
<h2><i class="fas fa-id-card"></i>Bienvenu sur la page du compte de <u>{{ dbUsers.username }}</u></h2>
<p>
    <button class="btn btn-outline-primary" type="button" data-toggle="collapse" data-target="#collapseExample"
        aria-expanded="false" aria-controls="collapseExample">
        Mes Donnée
    </button>
</p>
<div class="collapse" id="collapseExample">
    <div class="card card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">sexe</th>
                    <th scope="col">Édit Son Compte</th>
                    <th scope="col">Supprimer Son Compte</th>
                </tr>
            </thead>
            <tbody>
                {{#each dbUsers }}
                <tr>
                    {{!-- L'username de l'utilisateur --}}
                    <td> {{ username }} </td>
                    {{!-- Le Mail de l'utilisateur --}}
                    <td> {{ email }}</td>
                    {{!-- le sexe de l'utilisateur --}}
                    <td> {{ sexe }} </td>
                    <td>
                        {{!-- Bouton modif User --}}
                        <button type="button" class="btn  btn-outline-warning" data-toggle="modal"
                            data-target="#ModifUser">
                            <i class="fas fa-pen"></i>
                        </button>
                        {{!-- /Bouton modif User --}}
                    </td>
                    <td>
                        {{!-- Formumlaire Ban User --}}
                        <button class="btn btn-outline-danger" type="submit">
                            <i class="fas fa-user-minus"></i>
                        </button>
                        {{!-- /Formumlaire Ban User --}}
                    </td>
                </tr>
                {{!-- Modal modif User --}}
                <div class="modal fade" id="ModifUser" tabindex="-1" role="dialog" aria-labelledby="ModifUserModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="ModifUserLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form action="Moncompte{{_id}}/?_method=PUT" method="POST">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="formGroupExampleInput">Username :</label>
                                        <input type="text" class="form-control" id="formGroupExampleInput"
                                            placeholder="username">
                                    </div>
                                    <div class="form-group">
                                        <label for="formGroupExampleInput2">Email :</label>
                                        <input type="text" class="form-control" id="formGroupExampleInput2"
                                            placeholder="email">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal"><i
                                            class="far fa-times-circle"> Annuler</i></button>
                                    <button type="submit" class="btn btn-outline-success"><i class="far fa-save">
                                            Enregistré</i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                {{!-- /Modal modif User --}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{!-- /Partial d'info sur l'utilisateur --}}