<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>
                <i class="fas fa-list"></i>
                Liste des Sujets :
                <button type="button" class="btn btn-outline-danger float-right" data-toggle="modal"
                    data-target="#DelAllModal">
                    <i class="fas fa-trash-alt"></i>
                    Effacer tout
                </button>
                <!-- Button Add Sujet -->
                <button type="button" class="btn btn-outline-primary float-right" data-toggle="modal"
                    data-target="#AddSujet">
                    <i class="fas fa-plus"></i>
                    Ajouter un article
                </button>
        </div>
        </h1>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="DelAllModal" tabindex="-1" role="dialog" aria-labelledby="DelAllModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DelAllModalLabel">Effacer Tous Les Sujets ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Êtes-vous sur de supprimer tout les sujets ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <form action="/admin/?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Tout Effacer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Add Sujet-->
<div class="modal fade" id="AddSujet" tabindex="-1" role="dialog" aria-labelledby="AddSujet" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddSujet">Ajouté un Sujet</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/admin" method="post" enctype="multipart/form-data">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <label for="formGroupExampleInput">Titre De L'article :</label>
                                <input type="text" class="form-control" id="formGroupExampleInput"
                                    placeholder="Example de Titre" name='title' required>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <label for="exampleFormControlSelect1">Type de l'article :</label>
                                <select class="form-control" id="exampleFormControlSelect1" name='type' required>
                                    <option selected>Choisir :</option>
                                    <option value="1">Article sur les Régions Pokémon</option>
                                    <option value="2">Article sur Les Jeux Pokémon</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="comment">Description :</label>
                                    <textarea class="form-control" rows="5" id="comment" name="description"
                                        required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    </br>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="inputGroupFile01"
                                            aria-describedby="inputGroupFileAddon01" name="imgSujets" required>
                                        <label class="custom-file-label" for="inputGroupFile01">Choisir un fichier
                                            ...</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- /Formulaire pour crée un article --}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-success">Enregistrer</button>
                </form>
            </div>
        </div>
    </div>
</div>