<div class="container">
    <div class="row">
        <h5>
            <i class="far fa-map"></i>
            Sujet sur les Région Pokémon :
        </h5>
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Bouton</th>
                </tr>
            </thead>
            {{#each dbType1 }}
            <tr>
                <td>{{ title }}</td>
                <td>{{ description }}</td>
                <td>
                    <form action="/Sujet/{{ _id }}/?_method=DELETE" method="post">
                        <a href="/Sujet/{{ _id }}" class="btn btn-success">
                            <i class="fas fa-eye"></i>
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
            {{/each }}
        </table>
    </div>
</div>

