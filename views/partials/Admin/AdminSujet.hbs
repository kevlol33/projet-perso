<div class="container">
    <div class="row">
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Type</th>
                    <th scope="col">Description</th>
                    <th scope="col">Bouton</th>
                </tr>
            </thead>
            {{#each dbSujets }}
            <tr>
                <td>{{ title }}</td>
                <td>{{ type }}</td>
                <td>{{ description }}</td>
                <td>
                    <form action="/Sujet/{{ _id }}/?_method=DELETE" method="post">
                        <a href="/Sujet/{{ _id }}" class="btn btn-success">
                        <i class="fas fa-eye"></i>
                        </a>
                        <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
            {{/each }}
        </table>
    </div>
</div>