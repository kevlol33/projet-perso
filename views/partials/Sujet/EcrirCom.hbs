{{!-- Partial pour Écrir un commentaire --}}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      {{!-- Formulaire Pour envoyer le commentaire sur la DB --}}

      {{!-- {{dbsujetID._id}} permet de lier l'id de l'article au commentaire --}}
      <form action="/Sujet/{{dbsujetsID._id}}" method="post" enctype="application/x-www-form-urlencoded">
        <h3>Ajouter un Commentaire:</h3>
        <div class="form-group row">
          {{!-- le name description permet a la DB qu'il faut récupere ce textarea --}}
          <textarea class="form-control" id="validationTextarea" placeholder="Commentaire" required
            name="description"></textarea>
        </div>
        <div class="form">
          <button type="submit" class="btn btn-outline-primary">Envoyer</button>
        </div>
      </form>
      {{!-- Formulaire Pour envoyer le commentaire sur la DB --}}
    </div>
  </div>
</div>
{{!-- /Partial pour Écrir un commentaire --}}