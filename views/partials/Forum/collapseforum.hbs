<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="accordion col-12 col-md-12" id="accordionExample">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne"
                                aria-expanded="true" aria-controls="collapseOne">
                                Article Sur les Régions Pokémon
                            </button>
                        </h2>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                        data-parent="#accordionExample">
                        <div class="card-body">
                            {{!-- Tableau pour afficher les sujet du forum --}}
                            <table class="table table-hover table-dark">
                                <thead>
                                    <tr>
                                        <th scope="col">Titre</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Bouton</th>
                                    </tr>
                                </thead>
                                {{#each dbType1 }}
                                <tr>
                                    <td>{{ title }}</td>
                                    <td>{{ description }}</td>
                                    <td> <a href="/Sujet/{{_id}}" class="btn btn btn-outline-success"><i class="fas fa-eye"></i></a></td>
                                </tr>
                                {{/each }}
                            </table>
                            {{!-- /Tableau pour afficher les sujet du forum --}}
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingTwo">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Article sur les Jeux Pokémon
                            </button>
                        </h2>
                    </div>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                        <div class="card-body">
                            {{!-- Tableau pour afficher les sujet du forum --}}
                            <table class="table table-hover table-dark">
                                <thead>
                                    <tr>
                                        <th scope="col">Sujet</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Bouton</th>
                                    </tr>
                                </thead>
                                {{#each dbType2 }}
                                <tr>
                                    <td>{{ title }}</td>
                                    <td>{{ description }}</td>
                                    <td> <a href="/Sujet/{{_id}}" class="btn btn btn-outline-success"><i class="fas fa-eye"></i></a></td>
                                </tr>
                                {{/each }}
                            </table>
                            {{!-- /Tableau pour afficher les sujet du forum --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
